<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/menu_bdy"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	tools:context=".BudidayaActivity">

	<androidx.gridlayout.widget.GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp"
		app:columnCount="1"
		app:rowCount="4">
		<androidx.cardview.widget.CardView
			android:id="@+id/cvPlan"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="0"
			app:layout_rowWeight="1"
			android:layout_margin="10dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Lihat Rencana"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		<androidx.cardview.widget.CardView
			android:id="@+id/cvStart"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="1"
			app:layout_rowWeight="1"
			android:layout_margin="10dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Mulai Panen"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvReal"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="2"
			app:layout_rowWeight="1"
			android:layout_margin="10dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Lihat Realisasi"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvSend"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="3"
			app:layout_rowWeight="1"
			android:layout_margin="10dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Kirim Data"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</androidx.gridlayout.widget.GridLayout>

</LinearLayout>