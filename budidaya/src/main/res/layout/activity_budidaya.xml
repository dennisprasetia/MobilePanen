<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/menu_bdy"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/cardview_dark_background"
	tools:context=".BudidayaActivity">

	<androidx.gridlayout.widget.GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp"
		app:columnCount="1"
		app:rowCount="4">
		<androidx.cardview.widget.CardView
			android:id="@+id/cvPlan"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="0"
			app:layout_rowWeight="0.25"
			android:layout_margin="10dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:text="Lihat Rencana"
					android:textSize="20dp"
					android:textStyle="bold"
					android:gravity="center"/>
				<TextView
					android:id="@+id/tvQuanPlan"
					android:layout_width="33dp"
					android:layout_height="wrap_content"
					android:paddingVertical="5dp"
					android:text="0"
					android:textSize="18dp"
					android:gravity="center"
					android:background="@drawable/bg_count"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/detail_plan"
					android:gravity="center"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		<androidx.cardview.widget.CardView
			android:id="@+id/cvStart"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="1"
			app:layout_rowWeight="0.25"
			android:layout_margin="10dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Mulai Panen"
					android:textSize="20dp"
					android:textStyle="bold"
					android:gravity="center"/>
				<TextView
					android:layout_width="33dp"
					android:layout_height="wrap_content"
					android:paddingVertical="5dp"
					android:text="0"
					android:textSize="18dp"
					android:gravity="center"
					android:background="@drawable/bg_count"
					android:visibility="invisible"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/detail_start"
					android:gravity="center"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvReal"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="2"
			app:layout_rowWeight="0.25"
			android:layout_margin="10dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Lihat Realisasi"
					android:textSize="20dp"
					android:textStyle="bold"
					android:gravity="center"/>
				<TextView
					android:id="@+id/tvQuanReal"
					android:layout_width="33dp"
					android:layout_height="wrap_content"
					android:paddingVertical="5dp"
					android:text="0"
					android:textSize="18dp"
					android:gravity="center"
					android:background="@drawable/bg_count"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/detail_real"
					android:gravity="center"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvSend"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="3"
			app:layout_rowWeight="0.25"
			android:layout_margin="10dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Kirim Data"
					android:textSize="20dp"
					android:textStyle="bold"
					android:gravity="center"/>
				<TextView
					android:layout_width="33dp"
					android:layout_height="wrap_content"
					android:paddingVertical="5dp"
					android:text="0"
					android:textSize="18dp"
					android:gravity="center"
					android:background="@drawable/bg_count"
					android:visibility="invisible"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/detail_send"
					android:gravity="center"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</androidx.gridlayout.widget.GridLayout>

</LinearLayout>