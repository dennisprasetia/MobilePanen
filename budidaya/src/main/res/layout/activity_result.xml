<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/cardview_dark_background"
	tools:context=".flow.ResultActivity">
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		app:cardCornerRadius="10dp">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="10dp"
			android:orientation="vertical">
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Hasil Timbang"
				android:textSize="18dp"
				android:paddingHorizontal="10dp"
				android:paddingVertical="5dp"/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginBottom="5dp"
				android:background="@android:color/darker_gray"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="No. DO"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/no_do"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="No. SJ"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/no_sj"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="RIT"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/real_rit"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="Mulai"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/real_mulai"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="Selesai"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/real_selesai"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="Bruto"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/real_bruto"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="Tara Total"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/real_total_tara"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="Netto"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/real_netto"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="Ekor"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/real_ekor"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="BB Rata"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="5dp"
					android:text=":"/>
				<TextView
					android:id="@+id/real_bb"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>

	<Button
		android:id="@+id/btnOk"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:layout_marginRight="8dp"
		android:text="OK"/>
</LinearLayout>