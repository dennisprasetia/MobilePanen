<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/dialog_subtitle"
	tools:context=".MainActivity">

	<androidx.cardview.widget.CardView
		android:id="@+id/header_menu"
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="-40dp"
		app:cardBackgroundColor="@color/colorPrimary"
		app:cardCornerRadius="30dp">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingTop="0dp"
			android:paddingBottom="5dp"
			android:gravity="bottom|center">
			<ImageView
				android:id="@+id/btn_logout"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_alignParentEnd="true"
				android:layout_alignParentBottom="true"
				android:layout_alignParentTop="true"
				android:layout_marginEnd="8dp"
				android:src="@drawable/ic_logout"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_above="@id/tv_welcome"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:gravity="center"
				android:text="Mobile Panen"
				android:textColor="@color/cardview_light_background"
				android:textSize="30dp"
				android:textAllCaps="true"
				android:textStyle="bold"/>
			<TextView
				android:id="@+id/tv_welcome"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_above="@id/tv_user"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:gravity="center"
				android:text="Selamat Datang,"
				android:textSize="20dp"
				android:textColor="@color/cardview_light_background" />
			<TextView
				android:id="@+id/tv_user"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_alignParentBottom="true"
				android:gravity="center"
				android:text="Nama User"
				android:textSize="20dp"
				android:textColor="@color/cardview_light_background"/>
		</RelativeLayout>
	</androidx.cardview.widget.CardView>

	<LinearLayout
		android:id="@+id/body_menu"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:orientation="vertical"
		android:background="@color/cardview_light_background"
		android:layout_below="@+id/header_menu"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="8dp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Silahkan Pilih Mode Panen"
			android:textSize="18dp"
			android:textStyle="bold"
			android:paddingStart="10dp"
			android:paddingEnd="10dp"
			android:paddingTop="5dp"/>

		<androidx.gridlayout.widget.GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			app:columnCount="2">
			<androidx.cardview.widget.CardView
				android:id="@+id/cvBdy"
				android:layout_margin="5dp"
				app:cardCornerRadius="5dp"
				app:cardBackgroundColor="@color/red_cherries"
				app:layout_column="0"
				app:layout_columnWeight="0.8">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:orientation="vertical"
					android:gravity="center">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Budidaya"
						android:textAllCaps="true"
						android:textColor="@color/cardview_light_background"/>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/cvMitra"
				android:layout_margin="5dp"
				app:cardCornerRadius="5dp"
				app:cardBackgroundColor="@color/red_cherries"
				app:layout_column="1"
				app:layout_columnWeight="1">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:orientation="vertical"
					android:gravity="center">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Mitra"
						android:textAllCaps="true"
						android:textColor="@color/cardview_light_background"/>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</androidx.gridlayout.widget.GridLayout>
	</LinearLayout>

	<TextView
		android:id="@+id/tv_version"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/body_menu"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="8dp"
		android:text="Versi 2.1.1"
		android:textSize="17sp"
		android:textStyle="bold"
		android:textAlignment="center"/>

	<androidx.recyclerview.widget.RecyclerView
		android:layout_below="@id/tv_version"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="8dp"
		android:padding="10dp"
		android:background="@color/cardview_light_background"/>

</RelativeLayout>