<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".flow.TaraActivity">

	<TextView
		android:id="@+id/title_tandu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:text="Tipe Tandu"
		android:textColor="@color/cardview_light_background"
		android:textSize="22dp"
		android:textStyle="bold"
		android:gravity="center"
		android:background="@color/colorPrimary"/>

	<TextView
		android:id="@+id/title_pick"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/title_tandu"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:paddingHorizontal="16dp"
		android:layout_marginTop="8dp"
		android:text="Pilih Tipe Tandu"
		android:textSize="18sp"/>

	<Spinner
		android:id="@+id/cmb_pick"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/title_pick"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="8dp"
		android:layout_marginHorizontal="17dp"/>

	<Button
		android:id="@+id/btn_next"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/cmb_pick"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="16dp"
		android:text="Lanjut"/>

</RelativeLayout>